{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots" : ["./node_modules/@types/", "./src/@types"],
    "incremental": true,
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es2019"],
    "strict": true,
  },
  "include": [
    "src/**/*"
  ]
}
